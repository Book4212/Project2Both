<h1>รายชื่อสาขาวิชาทั้งหมด</h1>

<p id="notice"><%= notice %></p>

<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th class="data_row_head">สาขาวิชา</th>
      <th class="data_row_head">คณะ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td class="data_row"><%= department.departmentname %></td>
        <td class="data_row"><%= department.faculty.facultyname %></td>
        <td><%= link_to 'แสดงข้อมูล', department, class: "btn btn-primary active" %></td>
        <td><%= link_to 'แก้ไขข้อมูล', edit_department_path(department), class: "btn btn-success active" %></td>
        <td><%= link_to 'ลบข้อมูล', department, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger active" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
