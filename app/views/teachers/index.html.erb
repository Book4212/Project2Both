<h1>รายชื่ออาจารย์ทั้งหมด</h1>

<p id="notice"><%= notice %></p>

<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th class="data_row_head">รหัสอาจารย์</th>
      <th class="data_row_head">ชื่อ</th>
      <th class="data_row_head">คณะ</th>
      <th class="data_row_head">สาขาวิชา</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td class="data_row"><%= teacher.teacherid %></td>
        <td class="data_row"><%= teacher.user.name %></td>
        <td class="data_row"><%= teacher.department.faculty.facultyname%></td>
        <td class="data_row"><%= teacher.department.departmentname %></td>
        
        <td><%= link_to 'แสดงข้อมูล', teacher, class: "btn btn-primary active btn-sm" %></td>
        <td><%= link_to 'แก้ไขข้อมูล', edit_teacher_path(teacher), class: "btn btn-success active btn-sm" %></td>
        <td><%= link_to 'ลบข้อมูล', teacher, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger active btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
