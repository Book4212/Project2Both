<h1>รายชื่อวิชาเรียนทั้งหมด</h1>

<p id="notice"><%= notice %></p>

<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th class="data_row_head">ชื่อนักศึกษา</th>
      <th class="data_row_head">รหัสนักศึกษา</th>
      <th class="data_row_head">วิชา</th>
      <th class="data_row_head">ตอนเรียน</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @studies.each do |study| %>
      <tr>
        <td class="data_row"><%= study.user.name %></td>
        <td class="data_row"><%= study.user.student.studentid %></td>
        <td class="data_row"><%= study.sec.subject.subject_Name %></td>
        <td class="data_row"><%= study.sec.sec %></td>
        <td><%= link_to 'แสดงข้อมูล', study, class: "btn btn-primary active" %></td>
        <td><%= link_to 'แก้ไขข้อมูล', edit_study_path(study), class: "btn btn-success active" %></td>
        <td><%= link_to 'ลบข้อมูล', study, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger active" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
