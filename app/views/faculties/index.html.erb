<h1>รายชื่อคณะทั้งหมด</h1>

<p id="notice"><%= notice %></p>

<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th class="data_row_head">ชื่อคณะ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @faculties.each do |faculty| %>
      <tr>
        <td class="data_row"><%= faculty.facultyname %></td>
        <td><%= link_to 'แสดงข้อมูล', faculty, class: "btn btn-primary active" %> </td>
        <td><%= link_to 'แก้ไขข้อมูล', edit_faculty_path(faculty), class: "btn btn-success active" %></td>
        <td><%= link_to 'ลบข้อมูล', faculty, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger active" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
